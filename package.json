{
  "name": "court-booking-api",
  "version": "1.0.0",
  "description": "Court booking system API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit --detectOpenHandles",
    "test:e2e": "jest tests/e2e --detectOpenHandles"
  },
  "dependencies": {
    "bcryptjs": "3.0.2",
    "cors": "^2.8.5",
    "dotenv": "17.0.1",
    "express": "5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "nodemailer": "7.0.4",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.26.0",
    "swagger-ui-express": "4.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "jest": "30.0.3",
    "mongodb-memory-server": "10.1.4",
    "nodemon": "^3.1.11",
    "supertest": "7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/swagger/**"
    ]
  }
}
